<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/buttonVideoSegmentBear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonVideoSegmentGoat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonVideoSegmentMainMovie"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:background="@android:color/transparent"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonVideoSegmentBird"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonVideoSegmentMainCow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonVideoSegmentPig"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonVideoSegmentGiraffe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonVideoSegmentTiger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:onClick="onClick" />

        <!--
             <Button
            android:id="@+id/buttonVideo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="onClick" />
        -->
    </LinearLayout>

</LinearLayout>